<div align="center" style="background:#eee;padding:40px;border:solid #eee;box-shadow:0px 0px 3px #eee">
<table>
  <tr>
    <td><strong>年级为:</strong></td>
    <td><%= @grade.gname%></td>
  </tr>

  <tr>
    <td><%=link_to '查看全部年级',school_grades_path%></td>
  </tr>
</table>

<%=form_for @classschool,url: school_grade_classschools_path(params[:school_id],@grade) do |f| %>

  <table>

    <tr>
      <td>请输入班级名称：</td>
      <td><%=f.text_field:cname%></td>
    </tr>

    <tr>
      <td>请输入年级：</td>
      <td><%=f.text_field:clocationgrade%></td>
    </tr>

    <tr>
      <td><%=f.submit "添加"%></td>
    </tr>

  </table>

<% end %>
</div>
