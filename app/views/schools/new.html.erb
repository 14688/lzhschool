<body style="background-image: ./images/schoolnewbei.jpg">


  <div style="background:#eee;padding:40px;border:solid #eee;box-shadow:0px 0px 3px #eee">
  <h1 align="center">学校添加</h1>

<%= form_for :school,url: schools_path do |f|%>

  <table border="1" align="center">

    <tr>
      <td>请输入学校名：</td>
      <td><%=f.text_area :sname %></td>
    </tr>

    <tr>
      <td>请输入学校地址：</td>
      <td><%=f.text_area :ssite%></td>
    </tr>

    <tr>
      <td>请输入学校电话：</td>
      <td><%=f.text_area :sphone%></td>
    </tr>

    <tr>
      <td></td>
      <td><%=f.submit "提交信息" %></td>
    </tr>

  </table>

<% end %>

<table  align="center">
  <tr>
    <td style="color:red"><%=link_to '查看所有学校信息',schools_path%></td>
  </tr>
</table>

</div>

</body>
