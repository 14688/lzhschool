<div align="center" style="background:#eee;padding:40px;border:solid #eee;box-shadow:0px 0px 3px #eee">

<h1>修改学校信息</h1>

<%=form_for(@school) do |f|%>

  <p>
    <%=f.label :学校名称：%>
    <%=f.text_field :sname%>
  </p>

  <p>
    <%=f.label :地址位置：%>
    <%=f.text_field :ssite%>
  </p>

  <p>
    <%=f.label :学校电话：%>
    <%=f.text_field :sphone%>
  </p>
  
  <p>
    <%=f.submit "提交修改后的信息"%>
  </p>

<% end %>

<%= link_to '查看学校全部信息', schools_path %>
