<div align="center" style="background:#eee;padding:40px;border:solid #eee;box-shadow:0px 0px 3px #eee">

<table>

  <tr>
    <td><strong>教师的编号为:</strong></td>
    <td><%= @teacher.tnumber%></td>
  </tr>

  <tr>
    <td><strong>教师的姓名为:</strong></td>
    <td><%= @teacher.tname%></td>
  </tr>

  <tr>
    <td><strong>教师的性别为:</strong></td>
    <td><%= @teacher.tsex%></td>
  </tr>

  <tr>
    <td><strong>教师的职务为:</strong></td>
    <td><%= @teacher.title%></td>
  </tr>

  <tr>
    <td><strong>教师的邮箱为:</strong></td>
    <td><%= @teacher.temail%></td>
  </tr>
  <tr>
    <td><%=link_to '查看全部学生信息',school_grade_classschool_teacher_students_path%></td>
  </tr>

</table>


<%=form_for @student,url: school_grade_classschool_teacher_students_path(params[:school_id],params[:grade_id],params[:classschool_id],@teacher,@student) do |f| %>

  <table>

    <tr>
      <td>请输入学生编号</td>
      <td><%=f.text_field:unumber%></td>
    </tr>

    <tr>
      <td>请输入学生姓名</td>
      <td><%=f.text_field:uname%></td>
    </tr>

    <tr>
      <td>您的性别是（1：男，0：女）：</td>
      <td><%=f.text_field:usex%></td>
    </tr>

    <tr>
      <td>请输入学生年龄：</td>
      <td><%=f.text_field:uage%></td>
    </tr>

    <tr>
      <td>请输入学生邮箱：</td>
      <td><%=f.text_field:uemail%></td>
    </tr>

    <tr>
      <td><%=f.submit "提交学生信息"%></td>
    </tr>

  </table>
<% end %>
</div>
