<div align="center" style="background:#eee;padding:40px;border:solid #eee;box-shadow:0px 0px 3px #eee">

<table>
  <tr>
    <td><strong>学生编号:</strong></td>
    <td><%= @student.unumber%></td>
  </tr>

  <tr>
    <td><strong>学生姓名为:</strong></td>
    <td><%= @student.uname%></td>
  </tr>

  <tr>
    <td><strong>学生性别为:</strong></td>
    <td>
      <%if @student.usex == 0%>
      女
      <%else%>
      男
      <%end%>
    </td>
  </tr>

  <tr>
    <td><strong>学生年龄为:</strong></td>
    <td><%= @student.uage%></td>
  </tr>

  <tr>
    <td><strong>学生邮箱为:</strong></td>
    <td><%= @student.uemail%></td>
  </tr>

  <tr>
    <td><%=link_to '查看全部学生信息',school_grade_classschool_teacher_students_path%></td>

  </tr>

</table>
</div>
