<div align="center" style="background:#eee;padding:40px;border:solid #eee;box-shadow:0px 0px 3px #eee">

<%=form_for @teacher,url: school_grade_classschool_teacher_path(params[:school_id],params[:grade_id],params[:classschool_id]) do |f| %>

    <table>

      <tr>
        <td><%=f.label :请输入要修改的教师编号%></td>
        <td><%=f.text_field:tnumber%></td>
      </tr>

      <tr>
        <td><%=f.label :请输入要修改的教师名称%></td>
        <td><%=f.text_field:tname%></td>
      </tr>

      <tr>
        <td><%=f.label :请输入要修改的教师性别%></td>
        <td><%=f.text_field:tsex%></td>
      </tr>

      <tr>
        <td><%=f.label :请输入要修改的教师职务%></td>
        <td><%=f.text_field:title%></td>
      </tr>

      <tr>
        <td><%=f.label :请输入要修改的教师邮箱%></td>
        <td><%=f.text_field:temail%></td>
      </tr>

      <tr>
        <td><%=f.submit "提交"%></td>
      </tr>

  </table>
  <% end %>
</div>
