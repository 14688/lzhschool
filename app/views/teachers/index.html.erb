<div align="center" style="background:#eee;padding:40px;border:solid #eee;box-shadow:0px 0px 3px #eee">

<table>
  <tr>
    <td>教师编号</td><td></td>
    <td>教师姓名</td><td></td>
    <td>教师性别</td><td></td>
    <td>教师职务</td><td></td>
    <td>教师邮箱</td><td></td>
  </tr>

  <%@teachers.each do |teacher|%>
    <tr>
      <td><%=teacher.tnumber%></td><td></td>
      <td><%=teacher.tname%></td><td></td>
      <td><%=teacher.tsex%></td><td></td>
      <td><%=teacher.title%></td><td></td>
      <td><%=teacher.temail%></td><td></td>
      <td><%=link_to '删除此教师信息',
      school_grade_classschool_teacher_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher),
      method: :delete,
      data:{confirm: '你确定要删除此教师信息吗?'} %></td>
      <td><%=link_to '修改此教师信息',edit_school_grade_classschool_teacher_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher)%></td>
      <td><%=link_to '查看此教师详细信息',school_grade_classschool_teacher_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher)%></td>
      <td><%=link_to '查看所受班级信息',school_grade_classschool_teacheroperoation_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher)%></td>
      <!--<td><%=link_to '查看此教师所教学生',school_grade_classschool_teacheroperoations_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher)%></td>-->
    </tr>
  <% end %>
</table>
</div>
