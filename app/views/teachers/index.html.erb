<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdn.staticfile.org/foundation/5.5.3/css/foundation.min.css">
<script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdn.staticfile.org/foundation/5.5.3/js/foundation.min.js"></script>
<script src="https://cdn.staticfile.org/foundation/5.5.3/js/vendor/modernizr.js"></script>
<!--文本table各行变色-->
<style>
  #tableschool tr:nth-child(2n){
    background-color: #eee
  }
</style>
</head>

<div class="off-canvas-wrap" data-offcanvas>
  <div class="inner-wrap">
    <nav class="tab-bar" style="background-color:#777777"><!--导航右-->
      <section class="left-small"><!--导航头左-->
        <a class="left-off-canvas-toggle menu-icon"  style="background-color:#777777"><span></span></a>
      </section>

      <section class="middle tab-bar-section" style="background-color:#777777">
        <h1 class="title">学校管理系统</h1>
      </section>
     </nav>
<!--表框里的列表-->
      <aside class="left-off-canvas-menu" style="background-color:#666666">
         <ul class="off-canvas-list test" style="background-color:#666666">
          <li><label><h4 style="color:white">操作<h4></label></li>
          <%@teachers.each do |teacher|%><!--循环schools-->
          <li><h5 style="color:white"><%=link_to '查看全部学校',schools_path(params[:school_id])%></h5></li>
          <li><h5 style="color:white"><%=link_to '查看全部年级',school_grade_path(params[:school_id],params[:grade_id])%></h5></li>
          <li><h5 style="color:white"><%=link_to '查看全部班级',school_grade_classschools_path(params[:school_id],params[:grade_id])%></h5></li>
          <li><h5 style="color:white"><%=link_to '查看全部老师',school_grade_classschool_teachers_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher)%></h5></li>
          <li><h5 style="color:white"><%=link_to '查看全部学生',school_grade_classschool_teacher_students_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher)%></h5></li>
          <%break%>
          <%end%>
        </ul>
     </aside>
<!--主业显示-->
     <section class="main-section">
       <div align="center" style="background:#eee;border:solid #eee;box-shadow:0px 0px 3px #eee">
        <br>
      <div>
        <!--主业显示具体-->
        <table id="tableschool">
          <tr>
            <td><h5>教师编号</td>
            <td><h5>教师姓名</td>
            <td><h5>教师性别</td>
            <td><h5>教师职务</td>
            <td><h5>教师邮箱</td>
          </tr>
          <%@teachers.each do |teacher|%>

            <tr>
              <td><%=teacher.tnumber%></td>
              <td><%=teacher.tname%></td>
              <td><%=teacher.tsex%></td>
              <td><%=teacher.title%></td>
              <td><%=teacher.temail%></td>
              <td><%=link_to '删除此教师信息',
              school_grade_classschool_teacher_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher),
              method: :delete,
              data:{confirm: '你确定要删除此教师信息吗?'} %></td>
              <td><%=link_to '修改此教师信息',edit_school_grade_classschool_teacher_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher)%></td>
              <td><%=link_to '查看此教师详细信息',school_grade_classschool_teacher_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher)%></td>
<!--               <td><%=link_to '查看所受班级信息',school_grade_classschool_teacheroperoation_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher)%></td>
 -->              <td><%=link_to '增加学生信息',new_school_grade_classschool_teacher_student_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher)%></td>
              <td><%=link_to '查看全部学生',school_grade_classschool_teacher_students_path(params[:school_id],params[:grade_id],params[:classschool_id],teacher)%></td>
            </tr>
          <% end %>
        </table>
        <!--添加按钮-->
        <table>
          <tr>
            <%=link_to '添加新教师',new_school_grade_classschool_teacher_path%>
          </tr>
        </table>
      </div>
   <section>
     <a class="exit-off-canvas"></a>
   </div>
 </div>
</div>
<div>
<script>
$(document).ready(function() {
    $(document).foundation();
})
</script>
