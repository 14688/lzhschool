
<div  style="padding:40px;border:solid #eee;box-shadow:0px 0px 3px #eee">
 <!-- <link rel="stylesheet" href="https://cdn.staticfile.org/foundation/5.5.3/css/foundation.min.css">-->
 <link rel="stylesheet" href="https://cdn.staticfile.org/foundation/5.5.3/css/foundation.min.css">
 <div class="row">
 <div class="medium-4 columns" style="background-color:#f1f1f1;">

     <ul class="side-nav">
         <li><h6><%=link_to '查看所有的教师信息',school_grade_classschool_teachers_path%></h6></li>
         <li><h6><%=link_to '添加所对应的学生信息',new_school_grade_classschool_teacher_student_path(params[:school_id],params[:grade_id],params[:classschool_id],@teacher)%></h6></li>
     </ul>

   </div class="medium-8 cloums">
      <table>
        <tr>
          <td><h5>教师的编号为:</h5></td>
          <td><%= @teacher.tnumber%></td>
        </tr>

        <tr>
          <td><h5>教师的姓名为:</h5></td>
          <td><%= @teacher.tname%></td>
        </tr>

        <tr>
          <td><h5>教师的性别为:</h5></td>
          <td>
            <%if @teacher.tsex==0%>
            女
            <%else%>
            男
            <%end%></td>
        </tr>

        <tr>
          <td><h5>教师的职务为:</h5></td>
          <td><%= @teacher.title%></td>
        </tr>

        <tr>
          <td><h5>教师的邮箱为:</h5></td>
          <td><%= @teacher.temail%></td>
        </tr>
      </table>
     </div>
   </div>
</div>
