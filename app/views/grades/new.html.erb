<style>
  body{
    position:absolute;
    top:-300px;
    left: 10px;
  }
</style>
<script type="text/javascript">
  $(document).ready(function() {
    $(document).foundation();
  })
</script>
<body>

  <div id="newschool" style="padding:400px">
    <link rel="stylesheet" href="https://cdn.staticfile.org/foundation/5.5.3/css/foundation.min.css">
      <div style="background:#eee;padding:100px;border:solid #eee;box-shadow:0px 0px 3px #eee">
      <h1 align="center">学校添加</h1>

      <table>
        <tr>
          <td><h5>学校名字为:</td>
          <td><h5><%=@school.sname%></td>
        </tr>
      </table>

      <%=form_for @grade, url:school_grades_path(params[:school_id],@grade) do |f| %>
          <legend><h4><h4></legend>

            <label><h5>请输入年级:</h5>
              <%=f.text_field:gname%>
            </label>

            <label>
              <%=link_to '查看所有年级信息',school_grades_path%>
            </label>

            <table  align="center">
              <tr>
                <td style="color:red"><%=f.submit "提交信息" %></td>
              </tr>
            </table>
          <% end %>
        <section>
    </div>
  </div>
</body>
